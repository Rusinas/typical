{
    "compilerOptions": {
      "module": "esnext",
      "target": "esnext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      // Base URL should be set to the root of the monorepo in every project individually
      "baseUrl": "../../../",
      "paths": {
        "~typical/core/*": ["./packages/Core/src/*"],
        "~typical/text/*": ["./packages/Text/src/*"],
        "~typical/text-nodes/*": ["./packages/Nodes/src/*"],
        "~typical/editor/*": ["./packages/Editor/src/*"],
        "~typical/elements/*": ["./packages/Elements/src/*"],
        "~typical/tests/*": ["./packages/__tests__/src/*"]
      }
    },
    "include": [
      "env.d.ts",
      "apps/**/*.vue",
      "apps/**/*.ts",
      "packages/**/*.vue",
      "packages/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "src/**/__tests__/*",
      "**/*.d.ts",
      "**/*.d.ts.map"
    ],
}
  